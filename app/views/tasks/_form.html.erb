<% if flash[:error].present? %>
  <h2><%= flash[:error] %></h2>
<% end %>

<%= form_for @task do |f| %>
  <div class="form-group row">
    <%= f.label :name, :class => "col-sm-2 col-form-label" %>
    <div class="col-sm-6">
      <%= f.text_field :name, :required => true, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :description, :class => "col-sm-2 col-form-label" %>
    <div class="col-sm-6">
      <%= f.text_field :description, :required => true, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :category, :class => "col-sm-2 col-form-label" %>
    <div class="col-sm-6">
      <%= f.select :category, options_for_select(["Groceries", "Assistance", "Entertainment"]), :include_blank => true, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :urgency, :class => "col-sm-2 col-form-label" %>
    <div class="col-sm-6">
      <%= f.select :urgency, options_for_select(["Low", "Medium", "High"]), :include_blank => true, :required => true, :class => 'form-control' %>
    </div>
  </div>

  <%= f.submit nil, :class => 'btn btn-primary' %>
<% end %>
