<div id="edit-user">
  <div class="container">
    <div id="edit-user-row" class="row justify-content-center align-items-center">
      <div id="edit-user-column" class="col-md-12">
        <div id="edit-user-box" class="col-md-12">
          <h1 class="text-center pt-5 new-title">Settings</h1>
          <div class="error_container">
            <% if @user.errors.any? %>
              <ol>
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ol>
            <% end %>
          </div>

          <%= form_for @user do |f| %>
            <div class="form-group row">
              <%= f.label :name, :class => "col-sm-2 col-form-label" %>
              <div class="col-sm-6">
                <%= f.text_field :name, :required => true, :class => 'form-control' %>
              </div>
            </div>

            <div class="form-group row">
              <%= f.label :phone, :class => "col-sm-2 col-form-label" %>
              <div class="col-sm-6">
                <%= f.text_field :phone, :class => 'form-control' %>
              </div>
            </div>

            <div class="form-group row">
              <%= f.label :postcode, :class => "col-sm-2 col-form-label" %>
              <div class="col-sm-6">
                <%= f.number_field :postcode, :required => true, :class => 'form-control' %>
              </div>
            </div>

            <%= f.submit nil, :class => 'btn btn-primary' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
