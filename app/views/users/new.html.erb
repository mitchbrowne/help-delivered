<div class="signup-white-container">
  <div id="signup">
    <div class="container">
      <div id="signup-row" class="row justify-content-center align-items-center">
        <div id="signup-column" class="col-md-6">
          <div id="signup-box" class="col-md-12">
            <h1 class="text-center pt-5">Sign Up</h1>
            <div class="error_container">
              <% if @user.errors.any? %>
                <ol>
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ol>
              <% end %>
            </div>
            <%= form_for @user do |f| %>
              <div class="form-group">
                <%= f.label :name, "Name" %>
                <%= f.text_field :name, :required => true, :class => 'form-control' %>
              </div>

              <div class="form-group">
                <%= f.label :email %>
                <%= f.email_field :email, :required => true, :autofocus => true, :class => 'form-control' %>
              </div>

              <div class="form-group">
                <%= f.label :phone %>
                <%= f.telephone_field :phone, :class => 'form-control' %>
              </div>

              <div class="form-group">
                <%= f.label :postcode %>
                <%= f.number_field :postcode, :required => true, :max => 9999, :min => 1000, :class => 'form-control' %>
              </div>

              <div class="form-group">
                <%= f.label :password %>
                <%= f.password_field :password, :required => true, :class => 'form-control' %>
              </div>

              <div class="form-group">
                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation, :required => true, :class => 'form-control' %>
              </div>

              <div class="text-center">
                <%= f.submit 'Sign Up', :class => 'btn btn-primary' %>
              </div>

            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
