<div id="login">
  <div class="container">
    <div id="login-row" class="row justify-content-center align-items-center">
      <div id="login-column" class="col-md-6">
        <div id="login-box" class="col-md-12">
          <h1 class="text-center pt-5">Log In</h1>
          <div class="error_container">
            <% if flash[:error].present? %>
              <p><%= flash[:error] %></p>
            <% end %>
          </div>
          <%= form_tag login_path do %>
            <div class="form-group">
              <%= label_tag :email, nil, :class => "col-form-label" %>
              <%= email_field_tag :email, nil, :class => 'form-control' %>
            </div>
            <div class="form-group">
              <%= label_tag :password, nil, :class => "col-form-label" %>
              <%= password_field_tag :password, nil, :class => 'form-control' %>
            </div>
            <div class="text-center">
              <%= submit_tag "Sign In", :class => 'btn btn-primary' %>
            </div>
          <% end %>

          <div class="text-center not-already-signed-up">
            <%= link_to "Not already signed up?", new_user_path, :class => 'link_to' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
